<h3 style="color:white;">Editing Story</h3>
<div class="row">
  <div class="col-md-8">
    <%= render 'form', story: @story %>
  </div>
  <div class="col-md-4"><br>
    <div class="panel panel-info">
      <div class="panel-heading">
        <strong>Notes:</strong>
      </div>
      <div class="panel-body">
        <ul>
          <% @story.notes.each do |note| %>
            <div class="row">
              <li>
                <div class="col-md-12">
                  <%= note.note_entry %>
                </div>
              </li>
            </div>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
<%= link_to 'Back', @story, class: "btn btn-success btn-sm" %>
